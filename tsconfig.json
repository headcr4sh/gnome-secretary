{
  "$comment": "Only needed for TypeScript capabilities during development time.",
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "noEmit": true,
    "paths": {
      "*": [
        "*",
        "src/types/*",
        "src/types/gi/*",
      ]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "typeRoots": [
      "src/types/gi"
    ]
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "src/types/*.d.ts",
    "src/types/gi/gi.d.ts",
    "src/**/*.js"
  ],
}
